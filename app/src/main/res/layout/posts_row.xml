<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.v7.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="5dp"
        android:elevation="2dp"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/post_Date"
                    android:layout_width="0dp"
                    android:layout_weight="1.8"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left"

                    />

                <ImageView
                    android:id="@+id/post_Drop_menu"
                    android:layout_width="0dp"
                    android:layout_weight=".2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drop_down"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView

                    android:id="@+id/post_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:drawableRight="@drawable/post_icon_go"
                    android:gravity="center|left"
                    android:layout_gravity="left"
                    android:lines="1"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    />



            </LinearLayout>
            <TextView

                android:id="@+id/post_userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_gravity="right|center"
                android:lines="1"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:paddingRight="7dp"

                />

            <TextView
                android:id="@+id/post_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="11"
                android:padding="5dp"

                />
            <ImageView
                android:id="@+id/post_drugImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"

                >
                <TextView
                    android:id="@+id/post_drugName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    />

                <TextView
                    android:id="@+id/post_drugConcentrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center|right"

                    />
                <TextView
                    android:id="@+id/post_drugType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center|right"

                    />

                   </LinearLayout>
            <Button
                android:id="@+id/post_callBtn"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="call"
                android:background="@drawable/call_btn"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        />
</LinearLayout>
