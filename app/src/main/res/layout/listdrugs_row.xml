<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp"
        >

            <LinearLayout
                android:background="@drawable/gradiant_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <ImageView
                    android:id="@+id/result_Drugimage"
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center|left"


                    />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/result_Drugname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:gravity="right"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:drawableRight="@drawable/drugname"
                            android:gravity="right"
                            android:text="@string/drug_name2"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:textColor="@color/button_selectorcolor"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/result_Drugconentrate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:gravity="right"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:gravity="right"
                            android:text="@string/concentrateDrug_txt2"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:drawableRight="@drawable/tark"
                            android:textColor="@color/button_selectorcolor"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/result_Drugtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:gravity="right"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#0000"
                            android:gravity="right"
                            android:text="@string/drug_type2"
                            android:maxLength="12"
                            android:padding="16dp"
                            android:drawableRight="@drawable/confirm_password"
                            android:textColor="@color/button_selectorcolor"
                            android:textSize="16dp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dad8d8" />


            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:background="@drawable/gradiant_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1.4"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/gradiant_color"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/result_pharmacyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:gravity="right"
                android:maxLength="12"
                android:padding="16dp"
                android:textColor="#fff"
                android:textSize="16dp"  />

        <TextView
            android:text="اسم الصيدليه"
            android:drawableRight="@drawable/user"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0000"
            android:gravity="right"
            android:maxLength="12"
            android:padding="16dp"
            android:textColor="#fff"
            android:textSize="16dp"  />




</LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/white_greyish" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
